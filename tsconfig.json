{
  "include": ["src/*.ts"],
  "exclude": ["src/itl.ts"],
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "Node16",
    "skipLibCheck": true
  }
}
